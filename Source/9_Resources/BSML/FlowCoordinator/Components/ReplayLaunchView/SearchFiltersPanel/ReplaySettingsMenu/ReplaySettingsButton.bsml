<horizontal horizontal-fit="PreferredSize"
            pref-height="20" pref-width="20">
  <modal id="settings-modal"
         click-off-closes="true"
         size-delta-y="62" size-delta-x="50">
    <macro.as-host host="settings-menu">
      <macro.reparent transform="ui-component"/>
    </macro.as-host>
  </modal>
  <macro.as-host host="button">
    <macro.reparent transform="ui-component"/>
  </macro.as-host>
</horizontal>