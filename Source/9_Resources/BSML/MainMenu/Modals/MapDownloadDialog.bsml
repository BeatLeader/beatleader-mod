<horizontal pad="2" bg="round-rect-panel">
    <vertical id="loading-container" spacing="2" vertical-fit="PreferredSize">
        <loading-indicator preserve-aspect="true" pref-height="8" pref-width="8"/>
        <text text="Loading..."/>
    </vertical>
    <vertical id="finished-container">
        <text id="finished-text" text="" align="Bottom"/>
        <button text="Ok" active="~ok-button-active" on-click="ok-button-click"/>
    </vertical>
</horizontal>